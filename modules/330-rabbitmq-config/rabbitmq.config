%%
%% RabbitMQ configuration
%%

[
  {rabbit, [
     %% SSL
     {ssl_listeners, [5671]},
     {ssl_options, [{cacertfile,"/etc/pki/tls/certs/rabbitmq.pem"},
                    {certfile,"/etc/pki/tls/certs/rabbitmq.pem"},
                    {keyfile,"/etc/pki/tls/private/rabbitmq.pem"},
                    {verify,verify_none}
                    ]}
   ]}
].


